<h1>User edit</h1>

<%= form_with(model: @user, local: true) do |f| %>
	<li>
		<%= f.label :name, "Name" %>
		<%= f.text_field :name %>
	</li>
	<li>
		<%= f.label :email, "email" %>
		<%= f.email_field :email %>
	</li>
	<li>
		<%= f.label :mind, "mind" %>
		<%= f.select :mind, [["Positive", "positive"], ["Negative", "negative"]] %>
	</li>
	<li>
		<%= f.label :password, "Password" %>
		<%= f.password_field :password%>
	</li>
	<li>
		<%= f.submit "edit" %>
	</li>

<% end %>

<%= link_to "back to detail", user_path %>
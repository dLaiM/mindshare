<h1>You can modify your personal character</h1>

<%= form_with(model: @user, local: true) do |f| %>
	
	<%= f.label :name, "Name" %>
	<%= f.text_field :name %>
	
	<%= f.label :email, "email" %>
	<%= f.email_field :email %>
	
	<%= f.label :mind, "mind" %>
	<%= f.select :mind, [["Positive", "positive"], ["Negative", "negative"]] %>
	
	<%= f.submit "edit" %>

<% end %>

<%= link_to "back to detail", user_path %>